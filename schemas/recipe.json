{
  "$schema": "http://json-schema.org/draft-04-schema#",
  "description": "Recipe file for creating Akamai Sandboxes",
  "type": "object",
  "properties": {
    "sandbox": {
      "type": "object",
      "description": "object that specifies the information about how the sandbox should be configured",
      "properties": {
        "name": {
          "description": "The name of the sandbox defined by the developer when the sandbox was created. If you do not specify a name, the name will default to the `sandboxId`.",
          "type": "string"
        },
        "clonable": {
          "description": "Indicates whether the sandbox can be copied for another developer's use.",
          "type": "boolean"
        },
        "properties": {
          "description": "A list of the properties available for testing in the sandbox environment. A sandbox can contain more than one property.",
          "type": "array",
          "items": {
            "properties": {
              "requestHostnames": {
                "description": "A set of hostnames for use in testing within a developer's sandbox.",
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "rulesPath": {
                "type": "string"
              },
              "property": {
                "type": "string"
              }
            },
            "required": [
              "requestHostnames"
            ],
            "anyOf": [
              {
                "required": [
                  "rulesPath"
                ]
              },
              {
                "required": [
                  "property"
                ]
              }
            ]
          }
        }
      },
      "required": [
        "clonable"
      ]
    },
    "clientConfig": {
      "type": "object",
      "description": "object that specifies the information about how the sandbox client should be configured",
      "properties": {
        "connectorServerInfo": {
          "description": "Information about how traffic should be served by the sandbox connector",
          "type": "object",
          "properties": {
            "secure": {
              "type": "boolean"
            },
            "port": {
              "type": "integer"
            },
            "host": {
              "type": "string"
            }
          }
        },
        "advanced": {
          "type": "object",
          "properties": {
            "requestDetail": {
              "type": "boolean"
            }
          }
        },
        "originMappings": {
          "type": "array",
          "items": {
            "properties": {
              "from": {
                "type": "string"
              },
              "to": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "secure": {
                        "type": "boolean"
                      },
                      "port": {
                        "type": "integer"
                      },
                      "host": {
                        "type": "string"
                      },
                      "hostHeader": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "secure",
                      "port",
                      "host"
                    ]
                  }
                ]
              }
            }
          }
        }
      },
      "required": [
        "connectorServerInfo",
        "originMappings"
      ]
    }
  },
  "required": [
    "sandbox"
  ]
}
